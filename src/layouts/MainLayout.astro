---
// src/layouts/MainLayout.astro
import Header from '../components/Header.astro';
import '../styles/global.css';


const { title, favicon = '/images/gallery/favicon.png' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <link rel="icon" href={favicon} />
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <link rel="stylesheet" href="/styles/global.css" />
  <style>
    body {
      display: flex;
      flex-direction: column;
      min-block-size: 100vh;
      background: linear-gradient(180deg, #F0F8FF 0%, #E6F7FF 100%);
    }
    main {
      flex: 1;
      padding: 2rem 1rem;
    }
    @media (min-inline-size: 768px) {
      main {
        padding: 3rem 2rem;
      }
    }
  </style>
</head>
<body>
  <Header />
  <main>
    <slot />
  </main>

  <footer class="magic-footer" id="footer">
    <div class="footer-content">
      <div class="contact-developer">
        <a href="https://www.minainformatica.com/" target="_blank" aria-label="Mina Informática" class="logo-container">
          <img
            src="/images/gallery/favicon.png"
            alt="Logo Mina Informática"
            class="square-logo"
            loading="lazy"
          />
        </a>

        <p class="contact-text">Desarrollador</p>

        <div class="developer-links">
          <a href="https://www.linkedin.com/in/jacquelina" target="_blank" class="social-link linkedin" aria-label="LinkedIn Jaquelina">
            <svg class="social-icon" viewBox="0 0 24 14" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
            </svg>
          </a>

          <a href="https://instagram.com/minainformatica" target="_blank" class="social-link instagram" aria-label="Instagram Mina Informática">
            <svg class="social-icon" viewBox="0 0 26 14" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M7.8 2h8.4C19.4 2 22 4.6 22 7.8v8.4a5.8 5.8 0 0 1-5.8 5.8H7.8C4.6 22 2 19.4 2 16.2V7.8A5.8 5.8 0 0 1 7.8 2m-.2 2A3.6 3.6 0 0 0 4 7.6v8.8C4 18.39 5.61 20 7.6 20h8.8a3.6 3.6 0 0 0 3.6-3.6V7.6C20 5.61 18.39 4 16.4 4H7.6m9.65 1.5a1.25 1.25 0 0 1 1.25 1.25A1.25 1.25 0 0 1 17.25 8A1.25 1.25 0 0 1 16 6.75a1.25 1.25 0 0 1 1.25-1.25M12 7a5 5 0 0 1 5 5a5 5 0 0 1-5 5a5 5 0 0 1-5-5a5 5 0 0 1 5-5m0 2a3 3 0 0 0-3 3a3 3 0 0 0 3 3a3 3 0 0 0 3-3a3 3 0 0 0-3-3z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>

    <p class="text-sm mt-4">
      © 2025 Mina Informática. Todos los derechos reservados.
      <br />
     </p>
  </footer>
  

  <!-- Botón flotante -->
  <button id="scrollToTopBtn" aria-label="Volver arriba">
    ⬆︎
  </button>

  <style>
    .magic-footer {
      background: linear-gradient(135deg, #4682b4 0%, #5aa2d1 100%);
      color: white;
      text-align: center;
      padding: 2rem 1rem;
      font-family: 'Arial', sans-serif;
      font-size: 1rem;
      border-top: 1px solid #87ceeb;
      margin-top: 3rem;
    }

    .contact-developer {
      margin-top: 1rem;
    }

    .logo-container {
      display: inline-block;
      margin-bottom: 0.5rem;
    }

    .square-logo {
      width: 80px;
      height: 80px;
      border-radius: 16px;
      object-fit: contain;
      opacity: 0.85;
      transition: transform 0.3s ease, opacity 0.3s ease;
      box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

    .square-logo:hover {
      transform: scale(1.15);
      opacity: 1;
    }

    .contact-text {
      font-weight: 600;
      font-size: 1.3rem;
      margin-bottom: 1rem;
    }

    .developer-links {
      display: flex;
      justify-content: center;
      gap: 2rem;
    }

    .social-link {
      color: white;
      opacity: 0.8;
      transition: opacity 0.3s ease, transform 0.3s ease;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .social-link:hover {
      opacity: 1;
      transform: scale(1.2);
    }

    .social-icon {
      width: 30px;
      height: 30px;
    }

    .text-sm {
      font-size: 0.875rem;
      margin-top: 1rem;
    }

    .mt-4 {
      margin-top: 1rem;
    }

    /* Estilos del botón flotante */
    #scrollToTopBtn {
      position: fixed;
      bottom: 2rem;
      right: 1.5rem;
      background: rgba(70, 130, 180, 0.6);
      border: none;
      border-radius: 9999px;
      padding: 0.75rem 0.85rem;
      font-size: 1.5rem;
      color: white;
      cursor: pointer;
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.4s ease, background 0.3s ease;
      z-index: 999;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    #scrollToTopBtn.visible {
      opacity: 1;
      pointer-events: auto;
    }

    #scrollToTopBtn.solid {
      background: #4682b4;
    }
  </style>

  <script is:inline>
    const scrollBtn = document.getElementById('scrollToTopBtn');
    const footer = document.getElementById('footer');

    window.addEventListener('scroll', () => {
      const footerTop = footer.getBoundingClientRect().top;
      const windowHeight = window.innerHeight;

      if (footerTop < windowHeight) {
        scrollBtn.classList.add('visible', 'solid');
      } else if (window.scrollY > windowHeight / 2) {
        scrollBtn.classList.add('visible');
        scrollBtn.classList.remove('solid');
      } else {
        scrollBtn.classList.remove('visible', 'solid');
      }
    });

    scrollBtn.addEventListener('click', () => {
      window.scrollTo({ top: 0, behavior: 'smooth' });
    });
  </script>
</body>
</html>
