---
// src/components/Gallery.astro
const images = [
  "/images/photo1.jpg",
  "/images/photo2.jpg",
  "/images/photo3.jpg"
];
---

<section class="gallery">
  <h2 class="gallery-title">Mis Momentos</h2>
  
  <div class="carousel-container">
    <button class="nav-button prev" aria-label="Anterior" onclick="prevSlide()">
      ❮
    </button>
    
    <div class="carousel">
      {images.map((img, index) => (
        <div class="slide" data-index={index}>
          <div class="elegant-frame">
            <img 
              src={img} 
              alt={`Foto ${index + 1}`} 
              loading="lazy"
              class="gallery-image"
            />
            <div class="frame-overlay"></div>
          </div>
        </div>
      ))}
    </div>
    
    <button class="nav-button next" aria-label="Siguiente" onclick="nextSlide()">
      ❯
    </button>
  </div>
  
  <div class="dots">
    {images.map((_, index) => (
      <button 
        class="dot" 
        onclick="goToSlide(${index})"
        aria-label={`Ir a foto ${index + 1}`}
      />
    ))}
  </div>
</section>

<style>
  .gallery {
    padding: 2rem 1rem;
    max-inline-size: 800px;
    margin: 0 auto;
    position: relative;
    background: rgba(240, 248, 255, 0.5); /* Fondo azul alice semi-transparente */
    border-radius: 12px;
  }

  .gallery-title {
    text-align: center;
    color: #4682B4; /* Steel blue */
    font-family: 'Playfair Display', serif;
    margin-block-end: 2rem;
    font-size: 2rem;
    position: relative;
  }

  .gallery-title::after {
    content: '';
    position: absolute;
    inset-block-end: -10px;
    inset-inline-start: 50%;
    transform: translateY(-50%);
    inline-size: 100px;
    block-size: 2px;
    background: linear-gradient(90deg, transparent, #87CEEB, transparent); /* Azul cielo */
  }

  .carousel-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    max-inline-size: 500px;
  }

  .carousel {
    position: relative;
    inline-size: 200%;
    block-size: 700px;
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 8px 25px rgba(135, 206, 235, 0.3); /* Sombra azul */
  }

  .slide {
    position: absolute;
    inline-size: 100%;
    block-size: 100%;
    opacity: 0;
    transition: opacity 0.5s ease, transform 0.5s ease;
  }

  .slide[data-index="0"] {
    opacity: 1;
    z-index: 1;
  }

  .elegant-frame {
    position: relative;
    inline-size: 100%;
    block-size: 100%;
    padding: 15px;
    background: white;
    box-shadow: 0 10px 30px rgba(70, 130, 180, 0.15); /* Sombra steel blue */
    border: 1px solid #E6F7FF; /* Borde azul claro */
  }

  .gallery-image {
    inline-size: 100%;
    block-size: 100%;
    object-fit: cover;
    display: block;
  }

  .frame-overlay {
    position: absolute;
    inset-block-start: 0;
    inset-inline-start: 0;
    inline-size: 100%;
    block-size: 100%;
    border: 2px solid rgba(173, 216, 230, 0.5); /* Azul claro semi-transparente */
    pointer-events: none;
  }

  .nav-button {
    position: absolute;
    inset-block-start: 50%;
    transform: translateY(-50%);
    inline-size: 40px;
    block-size: 40px;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #B0E0E6; /* Borde azul polvo */
    border-radius: 50%;
    color: #4682B4; /* Steel blue */
    font-size: 1.2rem;
    cursor: pointer;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 10px rgba(176, 224, 230, 0.3);
    transition: all 0.3s ease;
  }

  .nav-button:hover {
    background: #4682B4; /* Steel blue */
    color: white;
    transform: translateY(-50%) scale(1.1);
    border-color: #4682B4;
  }

  .prev {
    inset-inline-start: 10px;
  }

  .next {
    inset-inline-end: 10px;
  }

  .dots {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-block-start: 1.5rem;
  }

  .dot {
    inline-size: 12px;
    block-size: 12px;
    border-radius: 50%;
    background: #B0E0E6; /* Azul polvo */
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .dot.active {
    background: #4682B4; /* Steel blue */
    transform: scale(1.3);
  }

  @media (max-inline-size: 600px) {
    .carousel {
      block-size: 300px;
    }
    
    .gallery-title {
      font-size: 1.6rem;
    }
    
    .nav-button {
      inline-size: 35px;
      block-size: 35px;
    }
  }
</style>

<script is:inline>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.slide');
  const dots = document.querySelectorAll('.dot');
  let autoScrollInterval;

  function updateCarousel() {
    slides.forEach((slide, index) => {
      slide.style.opacity = index === currentSlide ? '1' : '0';
      slide.style.zIndex = index === currentSlide ? '1' : '0';
    });

    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentSlide);
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    updateCarousel();
    resetAutoScroll();
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    updateCarousel();
    resetAutoScroll();
  }

  function goToSlide(index) {
    currentSlide = index;
    updateCarousel();
    resetAutoScroll();
  }

  function startAutoScroll() {
    autoScrollInterval = setInterval(() => {
      nextSlide();
    }, 4000);
  }

  function resetAutoScroll() {
    clearInterval(autoScrollInterval);
    startAutoScroll();
  }

  document.addEventListener('DOMContentLoaded', () => {
    startAutoScroll();
    
    const carousel = document.querySelector('.carousel-container');
    carousel.addEventListener('mouseenter', () => {
      clearInterval(autoScrollInterval);
    });
    
    carousel.addEventListener('mouseleave', () => {
      resetAutoScroll();
    });
  });
</script>