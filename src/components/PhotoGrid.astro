---
// src/components/PhotoGrid.astro
const images = [
  "/images/photo1.jpg",
  "/images/photo2.jpg",
  "/images/photo3.jpg"
];
---

<section class="gallery">
  <h2 class="gallery-title">Mis Momentos</h2>
  
  <div class="carousel-container">
    <button class="nav-button prev" aria-label="Anterior" onclick="prevSlide()">
      ❮
    </button>
    
    <div class="carousel">
      {images.map((img, index) => (
        <div class="slide" data-index={index}>
          <div class="elegant-frame">
            <img 
              src={img} 
              alt={`Foto ${index + 1}`} 
              loading="lazy"
              class="gallery-image"
            />
            <div class="frame-overlay"></div>
          </div>
        </div>
      ))}
    </div>
    
    <button class="nav-button next" aria-label="Siguiente" onclick="nextSlide()">
      ❯
    </button>
  </div>
  
  <div class="dots">
    {images.map((_, index) => (
      <button 
        class="dot" 
        onclick={`goToSlide(${index})`}
        aria-label={`Ir a foto ${index + 1}`}
      />
    ))}
  </div>
</section>

<style>
  .gallery {
    padding: 2rem 1rem;
    max-width: 1000px;
    margin: 0 auto;
    position: relative;
    background: rgba(240, 248, 255, 0.5);
    border-radius: 12px;
  }

  .gallery-title {
    text-align: center;
    color: #4682B4;
    font-family: 'Playfair Display', serif;
    margin-bottom: 2rem;
    font-size: 2rem;
    position: relative;
  }

  .gallery-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 100px;
    height: 2px;
    background: linear-gradient(90deg, transparent, #87CEEB, transparent);
  }

  .carousel-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 100%;
    width: 100%;
  }

  .carousel {
    position: relative;
    width: 100%;
    aspect-ratio: 4 / 3;
    max-height: clamp(250px, 60vh, 600px);
    overflow: hidden;
    border-radius: 10px;
    box-shadow: 0 8px 25px rgba(135, 206, 235, 0.3);
  }

  .slide {
    position: absolute;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 0.5s ease;
    top: 0;
    left: 0;
  }

  .slide[data-index="0"] {
    opacity: 1;
    z-index: 1;
  }

  .elegant-frame {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 10px;
    background: white;
    box-shadow: 0 10px 30px rgba(70, 130, 180, 0.15);
    border: 1px solid #E6F7FF;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .gallery-image {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    border-radius: 4px;
  }

  .frame-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 2px solid rgba(173, 216, 230, 0.5);
    pointer-events: none;
    box-sizing: border-box;
    border-radius: 4px;
  }

  .nav-button {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid #B0E0E6;
    border-radius: 50%;
    color: #4682B4;
    font-size: 1.2rem;
    cursor: pointer;
    z-index: 2;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 2px 10px rgba(176, 224, 230, 0.3);
    transition: all 0.3s ease;
  }

  .nav-button:hover {
    background: #4682B4;
    color: white;
    transform: translateY(-50%) scale(1.1);
    border-color: #4682B4;
  }

  .prev {
    left: 10px;
  }

  .next {
    right: 10px;
  }

  .dots {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 1.5rem;
    flex-wrap: wrap;
  }

  .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: #B0E0E6;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .dot.active {
    background: #4682B4;
    transform: scale(1.3);
  }

  @media (max-width: 768px) {
    .gallery-title {
      font-size: 1.6rem;
    }

    .nav-button {
      width: 36px;
      height: 36px;
    }

    .elegant-frame {
      padding: 6px;
    }

    .gallery-image {
      object-fit: cover;
    }
  }

  @media (max-width: 480px) {
    .gallery-title {
      font-size: 1.4rem;
    }

    .carousel {
      aspect-ratio: 1 / 1;
    }
  }
</style>

<script is:inline>
  let currentSlide = 0;
  const slides = document.querySelectorAll('.slide');
  const dots = document.querySelectorAll('.dot');
  let autoScrollInterval;

  function updateCarousel() {
    slides.forEach((slide, index) => {
      slide.style.opacity = index === currentSlide ? '1' : '0';
      slide.style.zIndex = index === currentSlide ? '1' : '0';
    });

    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentSlide);
    });
  }

  function nextSlide() {
    currentSlide = (currentSlide + 1) % slides.length;
    updateCarousel();
    resetAutoScroll();
  }

  function prevSlide() {
    currentSlide = (currentSlide - 1 + slides.length) % slides.length;
    updateCarousel();
    resetAutoScroll();
  }

  function goToSlide(index) {
    currentSlide = index;
    updateCarousel();
    resetAutoScroll();
  }

  function startAutoScroll() {
    autoScrollInterval = setInterval(() => {
      nextSlide();
    }, 4000);
  }

  function resetAutoScroll() {
    clearInterval(autoScrollInterval);
    startAutoScroll();
  }

  document.addEventListener('DOMContentLoaded', () => {
    startAutoScroll();
    
    const carousel = document.querySelector('.carousel-container');
    carousel.addEventListener('mouseenter', () => {
      clearInterval(autoScrollInterval);
    });
    
    carousel.addEventListener('mouseleave', () => {
      resetAutoScroll();
    });
  });
</script>
