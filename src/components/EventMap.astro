---
// src/components/EventMap.astro
const { title = "Ubicaci√≥n del Evento" } = Astro.props;
---

<section class="map-section">
  <h2 class="map-title">{title}</h2>
  
  <div class="map-container">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d225.24894939061627!2d-57.568820610847574!3d-25.405373271727214!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x945dab200a2f0451%3A0xb6b6a7400feb56ac!2sDinastia%20salon%20de%20eventos!5e0!3m2!1ses-419!2spy!4v1746989775665!5m2!1ses-419!2spy"
      width="100%"
      height="400"
      style="border:0;"
      allowfullscreen
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="google-map"
    ></iframe>
    
    <div class="map-actions">
      <a 
        href="https://www.google.com/maps/dir//Dinastia+salon+de+eventos/@-25.4053908,-57.5687716,21z/data=!4m12!1m5!3m4!2zMjXCsDI0JzE5LjUiUyA1N8KwMzQnMDcuMiJX!8m2!3d-25.405419!4d-57.568665!3m5!1s0x945dab200a2f0451:0xb6b6a7400feb56ac!8m2!3d-25.4054195!4d-57.5686651!16s%2Fg%2F11p032g9vn?entry=ttu"
        target="_blank"
        class="direction-button"
      >
        üìç C√≥mo llegar
      </a>
    </div>
  </div>
</section>

<style>
  .map-section {
    padding: 2rem 1rem;
    margin: 3rem auto;
    max-inline-size: 800px;
    background: rgba(240, 248, 255, 0.3); /* Fondo azul alice muy suave */
    border-radius: 15px;
  }

  .map-title {
    font-family: 'Playfair Display', serif;
    color: #4682B4; /* Azul acero */
    text-align: center;
    margin-block-end: 1.5rem;
    position: relative;
    font-size: 1.8rem;
  }

  .map-title::after {
    content: '';
    position: absolute;
    inset-block-end: -10px;
    inset-inline-start: 50%;
    transform: translateX(-50%);
    inline-size: 80px;
    block-size: 3px;
    background: linear-gradient(90deg, #B0E0E6, #4682B4); /* Degradado azul claro a azul acero */
  }

  .map-container {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(135, 206, 235, 0.2); /* Sombra azul claro */
    border: 1px solid #E6F7FF; /* Borde azul muy claro */
  }

  .google-map {
    display: block;
    aspect-ratio: 16/9;
    inline-size: 100%;
  }

  .map-actions {
    padding: 1.5rem;
    background: #F0F8FF; /* Azul alice */
    text-align: center;
    border-block-start: 1px solid #E6F7FF;
  }

  .direction-button {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background: #4682B4; /* Azul acero */
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid transparent;
    box-shadow: 0 4px 8px rgba(70, 130, 180, 0.2);
  }

  .direction-button:hover {
    background: white;
    color: #4682B4;
    border-color: #4682B4;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(70, 130, 180, 0.3);
  }

  @media (max-inline-size: 600px) {
    .google-map {
      block-size: 300px;
    }
    
    .direction-button {
      padding: 0.6rem 1.2rem;
      font-size: 0.9rem;
    }

    .map-title {
      font-size: 1.5rem;
    }
  }
</style>
