---
const birthday = new Date('2025-06-07');
const today = new Date();
const diffTime = birthday - today;
const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
const isBirthday = diffDays === 0;
---

<div class="days-counter">
  <div class="counter-container">
    <h3 class="counter-text">Faltan solo</h3>
    <div class="number">{diffDays}</div>
    <h3 class="counter-text">d√≠as para mi fiesta</h3>
  </div>
</div>

{isBirthday && (
  <canvas id="fireworks-canvas" class="fireworks-canvas"></canvas>
)}

<script type="module" client:load>
  import confetti from 'https://cdn.skypack.dev/canvas-confetti';

  const isBirthday = {isBirthday};

  if (isBirthday) {
    const canvas = document.getElementById('fireworks-canvas');
    const myConfetti = confetti.create(canvas, { resize: true, useWorker: true });

    const duration = 5000; // 5 segundos
    const end = Date.now() + duration;

    function launchConfetti() {
      myConfetti({
        particleCount: 10,
        spread: 60,
        startVelocity: 40,
        ticks: 60,
        origin: {
          x: Math.random(),
          y: Math.random() * 0.5,
        },
        colors: ['#ff0000', '#00ff00', '#0000ff', '#ffff00'],
      });

      if (Date.now() < end) {
        requestAnimationFrame(launchConfetti);
      }
    }

    launchConfetti();
  }
</script>

<style>
  .days-counter {
    text-align: center;
    margin: 2rem 0;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, #E6F7FF 0%, #87CEEB 50%, #4682B4 100%);
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(70, 130, 180, 0.3);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .counter-container {
    max-width: 300px;
    margin: 0 auto;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .number {
    font-size: 4rem;
    font-weight: bold;
    color: white;
    margin: 0.5rem 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    font-family: 'Arial', sans-serif;
  }

  .counter-text {
    margin: 0;
    font-size: 1.2rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  @media (min-width: 768px) {
    .days-counter {
      padding: 3rem 1rem;
    }
    .number {
      font-size: 5rem;
    }
    .counter-text {
      font-size: 1.5rem;
    }
  }

  .fireworks-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9999;
  }
</style>
