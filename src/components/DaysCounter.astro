---
const birthday = new Date('2025-06-07T00:00:00'); // Fecha objetivo
const today = new Date();
today.setHours(0, 0, 0, 0); // Normaliza hora

const diffTime = birthday.getTime() - today.getTime();
const diffDays = Math.max(0, Math.ceil(diffTime / (1000 * 60 * 60 * 24))); // Nunca negativo
const isBirthday = diffDays === 0;
---

<div class="days-counter">
  <div class="counter-container">
    <h3 class="counter-text">Falta solo</h3>
    <div class="number" id="days-number">{diffDays}</div>
    <h3 class="counter-text">d√≠a para mi fiesta</h3>
  </div>
</div>

{isBirthday && (
  <canvas id="fireworks-canvas" class="fireworks-canvas"></canvas>
)}

<script type="module">
  import confetti from 'https://cdn.skypack.dev/canvas-confetti';

  document.addEventListener('DOMContentLoaded', () => {
    const diff = parseInt(document.getElementById('days-number')?.textContent || '0');

    if (diff === 0) {
      const canvas = document.getElementById('fireworks-canvas');
      if (!canvas) return;

      const myConfetti = confetti.create(canvas, {
        resize: true,
        useWorker: true
      });

      const duration = 5000;
      const end = Date.now() + duration;

      (function frame() {
        myConfetti({
          particleCount: 8,
          spread: 80,
          startVelocity: 30,
          origin: { x: Math.random(), y: Math.random() * 0.6 },
          colors: ['#ff0', '#0f0', '#00f', '#f0f', '#fff'],
          scalar: 1.5,
          ticks: 200
        });

        if (Date.now() < end) {
          requestAnimationFrame(frame);
        }
      })();
    }
  });
</script>

<style>
  .days-counter {
    text-align: center;
    margin: 2rem 0;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, #E6F7FF 0%, #87CEEB 50%, #4682B4 100%);
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(70, 130, 180, 0.3);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .counter-container {
    max-width: 300px;
    margin: 0 auto;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    backdrop-filter: blur(5px);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  .number {
    font-size: 4rem;
    font-weight: bold;
    color: white;
    margin: 0.5rem 0;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    font-family: 'Arial', sans-serif;
  }

  .counter-text {
    margin: 0;
    font-size: 1.2rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  @media (min-width: 768px) {
    .days-counter {
      padding: 3rem 1rem;
    }

    .number {
      font-size: 5rem;
    }

    .counter-text {
      font-size: 1.5rem;
    }
  }

  .fireworks-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 9999;
  }
</style>
